<UserControl x:Class="ExpenseTracker.View.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenseTracker.View"
        mc:Ignorable="d"
         Height="400" Width="500"       
        Background="#f8f9fa">
    <TabControl>
        <!-- ================= LOGIN TAB ================= -->
        <TabItem Header="Login">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Expense Tracker"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="5"/>
                    <TextBlock Text="Please Log In"
                           FontSize="16"
                           Foreground="#27AE60"
                           HorizontalAlignment="Center"
                           Margin="5"/>
                </StackPanel>

                <!-- User Info Card -->
                <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="15"
                    Padding="20"
                    BorderBrush="#ddd"
                    BorderThickness="1"
                    Margin="0,20,0,0"
                    Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Name" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                            <TextBox Height="35" Width="240" Text="{Binding UserName}" 
                                 Padding="5" BorderBrush="#BDC3C7" BorderThickness="1"
                                 Background="#FAFAFA"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                    <Button Content="Log in" x:Name="btnLogin"
                        Width="140" Height="40"
                        FontWeight="Bold" Click="btnLogin_Click"
                        BorderThickness="0"
                        Cursor="Hand">
                    </Button>
                </StackPanel>
            </Grid>
        </TabItem>

        <!-- ================= REGISTER TAB ================= -->
        <TabItem Header="Register">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Create User"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <!-- User Info Card -->
                <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="15"
                    Padding="10"
                    BorderBrush="#ddd"
                    BorderThickness="1"
                    Margin="0,10,0,0"
                    Effect="{DynamicResource DropShadowEffect}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Name:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                            <TextBox Height="35" Width="240" Text="{Binding UserName}" Padding="5" Background="#FAFAFA" BorderBrush="#BDC3C7" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Phone Number:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                            <TextBox Height="35" Width="240" Text="{Binding PhoneNumber}" Padding="5" Background="#FAFAFA" BorderBrush="#BDC3C7" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Age:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                            <TextBox Height="35" Width="240" Text="{Binding Age}" Padding="5" Background="#FAFAFA" BorderBrush="#BDC3C7" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Balance:" FontWeight="Bold" Width="120" VerticalAlignment="Center"/>
                            <TextBox Height="35" Width="240" Text="{Binding InitialBalance,StringFormat=Rs.{0:N2}}" Padding="5"
                                 Background="#FAFAFA" Foreground="#27AE60" BorderBrush="#BDC3C7" BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                    <Button x:Name="btnSignUp" Content="Sign Up"
                        Width="140" Height="40"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSignUp_Click">
                    </Button>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>

</UserControl>
